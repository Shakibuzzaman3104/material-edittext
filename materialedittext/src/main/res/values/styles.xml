        <item name="boxStrokeColor">@drawable/colorset_box_outline</item>
        <item name="boxStrokeWidth">@dimen/box_stroke_size_normal</item>
        <item name="boxStrokeWidthFocused">@dimen/box_stroke_size_focused</item>
        <item name="hintTextAppearance">@style/DTTextInputLayoutHintTextStyle</item>
